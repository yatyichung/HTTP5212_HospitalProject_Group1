
@{
    ViewBag.Title = "New";
}

<h2>Create Department</h2>
<form action="/Department/Create" method="POST">

    <div>
        <label>Department Name:</label><input type="text" name="dept_name" placeholder="e.g., Emergency" />
    </div>
    <div>
        <label>Department Description:</label><input type="text" name="dept_desc" placeholder="e.g., Provides emergency services." />
    </div>

    <div>
        <input type="submit" value="Add Department" />
    </div>
</form>