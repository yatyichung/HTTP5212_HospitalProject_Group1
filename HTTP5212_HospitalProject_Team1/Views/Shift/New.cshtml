            }
            
            var ShiftWed = formHandle.ShiftWed;
            if (ShiftWed.value === "" || ShiftWed.value === null) {
                ShiftWed.focus();
                alertBoxShiftWed.style.display = "inline-block";
                return false;
            } else {
                alertBoxShiftWed.style.display = "none";
            }
            
            
             var ShiftThurs = formHandle.ShiftThurs;
            if (ShiftThurs.value === "" || ShiftThurs.value === null) {
                ShiftThurs.focus();
                alertBoxShiftThurs.style.display = "inline-block";
                return false;
            } else {
                alertBoxShiftThurs.style.display = "none";
            }
            
              var ShiftFri = formHandle.ShiftFri;
            if (ShiftFri.value === "" || ShiftFri.value === null) {
                ShiftFri.focus();
                alertBoxShiftFri.style.display = "inline-block";
                return false;
            } else {
                alertBoxShiftFri.style.display = "none";
            }
            
             var ShiftSat = formHandle.ShiftSat;
            if (ShiftSat.value === "" || ShiftSat.value === null) {
                ShiftSat.focus();
                alertBoxShiftSat.style.display = "inline-block";
                return false;
            } else {
                alertBoxShiftSat.style.display = "none";
            }
            

        }
    }
</script>
